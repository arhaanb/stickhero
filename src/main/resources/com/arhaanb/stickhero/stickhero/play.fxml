  </stylesheets>  -->
   <children>
      <ImageView fitHeight="720.0" fitWidth="382.0">
         <image>
            <Image url="@bg.png" />
         </image>
      </ImageView>
      <Rectangle fx:id="rect" arcHeight="5.0" arcWidth="5.0" fill="#3c96eb" height="283.0"
         layoutX="40.0" layoutY="437.0" stroke="BLACK" strokeType="INSIDE" width="135.0" />
