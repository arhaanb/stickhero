<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arhaanb.stickhero.stickhero.HelloController">
  <!-- <stylesheets>
    <URL value="./application.css" />
  </stylesheets>  -->
  <children>
    <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="382.0" spacing="20.0" style="-fx-background-color: orange;">
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <!-- <Button onAction="#onHelloButtonClick" prefHeight="34.0" prefWidth="93.0" text="Play!" /> -->

      <Label fx:id="welcomeText" text="Settings">
            <font>
               <Font size="47.0" />
            </font></Label>
         <ToggleButton mnemonicParsing="false" style="-fx-background-radius: 10px; -fx-background-color: black;" text="Pause Music" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font size="24.0" />
            </font>
         </ToggleButton>
         <ToggleButton mnemonicParsing="false" style="-fx-background-radius: 10px; -fx-background-color: black;" text="Volume" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font size="24.0" />
            </font>
         </ToggleButton>
         <ToggleButton mnemonicParsing="false" onAction="#switchToHome" style="-fx-background-radius: 10px; -fx-background-color: black;" text="Exit" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font size="24.0" />
            </font>
         </ToggleButton>
      <!-- <Button onAction="#onHelloButtonClick" prefHeight="34.0" prefWidth="93.0" text="Settings"
      /> -->
    </VBox>
  </children>
</AnchorPane>
